{% include 'encabezado.html' %}
    <head>
        <title>Busqueda de Pacientes</title>
    </head>
    <body>
{% include 'barra.html' %}
<div class="container">
   {% if resources.mensajeError !=null  %}
    <br>
    <div class="alert alert-secondary" role="alert">
      {{ resources.mensajeError }}
    </div>
  {% endif %}
	<br>
	<h2><u>Buscar Paciente</u></h2>

	<form action="./index.php?action=buscar_paciente" method="POST">
		<div class="form-row">
	    	<div class="form-group col-md-4">
		      	<label for="apellido">Apellido:</label>
		      	<input type="text" class="form-control" id="apellido" name="apellido" placeholder="Apellido" >
	    	</div>
  		</div>
  		<div class="form-row">
	    	<div class="form-group col-md-4">
		      	<label for="nombre">Nombre:</label>
		      	<input type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre" >
	    	</div>
  		</div>
  		<div class="form-row">
  			<div class="form-group col-md-2">
		      <label for="tipo_doc">Tipo de Documento:</label>
		      <select class="form-control" name="tipo_doc" id="tipo_doc">
		      	<option value=""> Elegir tipo</option>
		        {% for tipo in tiposDoc %}
		        <option value="{{tipo.id}}">{{tipo.name}}</option>
		        {% endfor %} 
		      </select>
    		</div>
    	</div>
    	<div class="form-row">
	    	<div class="form-group col-md-4">
	        	<label for="numero_documento">Número de Documento:</label>
	        	<input type="number" class="form-control" id="numero_documento" name="numero_documento" placeholder="Número de Documento" >
	    	</div>
    	</div>
    	<div class="form-row">
	    	<div class="form-group col-md-4">
		      	<label for="numero_historia_clinica">Número de Historia Clínica:</label>
		      	<input type="number" class="form-control" id="numero_historia_clinica" name="numero_historia_clinica" placeholder="Número de Historia Clíica" >
	    	</div>
	    </div>
		<input type="submit" class="btn btn-primary" value="Enviar"/>
		</form>

{% if resources.mensaje is defined %}

  {% if not resources.mensaje  is empty  %}
    <br>
    <div class="alert alert-secondary" role="alert">
      {{ resources.mensaje }}
    </div>
  {% endif %}

{% endif %}
</div>
	{% include 'footer.html' %}
    </body>
</html>
