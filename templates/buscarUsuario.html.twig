{% include 'encabezado.html' %}
    <head>
        <title>Busqueda de Usuario</title>
    </head>
    <body>
{% include 'barra.html' %}
<div class="container">
   {% if resources.mensajeError !=null  %}
    <br>
    <div class="alert alert-secondary" role="alert">
      {{ resources.mensajeError }}
    </div>
  {% endif %}
	<br>
	<h2><u>Buscar Usuario</u></h2>

	<form action="./index.php?action=buscar_usuario" method="POST">
		<div class="form-row">
	    	<div class="form-group col-md-4">
		      	<label for="username">Username:</label>
		      	<input type="text" class="form-control" id="username" name="username" placeholder="username" >
	    	</div>
  		</div>
  		<div class="form-row">
	    	<div class="form-group col-md-4">
		      	<label for="email">Email:</label>
		      	<input type="text" class="form-control" id="email" name="email" placeholder="email" >
	    	</div>
  		</div>
  		<div class="form-row">
  			<div class="form-group col-md-2">
		      <label for="estado">Estado del usuario</label>
		      <select class="form-control" name="estado" id="estado">
		      	<option value="">Elegir estado</option>
		        <option value="2">Activo</option>
		        <option value="1">Bloqueado</option>
		      </select>
    		</div>
    	</div>
		<input type="submit" class="btn btn-primary" value="Enviar"/>
		</form>

{% if resources.mensaje is defined %}

  {% if not resources.mensaje  is empty  %}
    <br>
    <div class="alert alert-secondary" role="alert">
      {{ resources.mensaje }}
    </div>
  {% endif %}

{% endif %}
</div>
	{% include 'footer.html' %}
    </body>
</html>
