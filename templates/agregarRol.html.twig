<div class="container">
<center><h2><u>Roles de usuario</u></h2></center>
<main class="main">
<br>
<center><form action=./index.php?action=asignarRol&id={{usuario[0].id}} method="POST">
  <div class="form-group col-md-4">
  	{% for us in usuario %}
    <label for="usuario">Usuario : {{us.username}} </label><br>
    {% endfor %} 
    <span>Tiene asignado los roles: </span><br>
    {% for rol in misRoles %}
    <span>{{rol.nombre}} </span>&nbsp;<a href="">Desasignar</a><br>
    {% endfor %} 
  </div>
  <div class="form-group col-md-4">
  	<center><h4><u>Asignarle un nuevo rol</u></h4></center>
    <label for="rol">Rol</label>
    <select name="idRol" class="form-control col-md-6">
	    {% for item in resources %}
	    	<option value="{{item.id}}">{{item.nombre}}</option>
	    {% endfor %}   	
    </select>

  </div>
  <button type="submit" class="btn btn-primary">Aceptar</button>
</form></center>
</main>
</div>
