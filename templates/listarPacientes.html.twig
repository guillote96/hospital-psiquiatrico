{% include 'encabezado.html'%}
    <head>
        <title>Pacientes</title>
    </head>
{% include 'barra.html'%}
    <br>
      <div class="container">
        <h2><u>Pacientes</u></h2>
        <table class="table">
            <thead>
                <tr>
                  <th scope="col">Apellido</th>
                  <th scope="col">Nombre</th>
                  <th scope="col">Domicilio</th>
                  <th scope="col">Editar</th>
                  <th scope="col">Eliminar</th>
                </tr>
  </thead>
  <tbody>
    {% for item in resources.resources %}
    <tr>
          <td>{{item.apellido}}</td>
          <td>{{item.nombre}}</td>
          <td>{{item.domicilio}}</td>
          <td><a class="btn btn-primary btn-sm" href="./?action=editarPaciente&id={{ item.id }}"> Editar </a></td>
          <td><a class="btn btn-primary btn-sm" href="./?action=eliminarPaciente&id={{ item.id }}"> Eliminar </a></td>
        {% endfor %}
      </tbody>
        </table>
        <br>
        {% if cantidad > 1 %}
          <nav aria-label="Page navigation example">
          <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
          <!--<li class="page-item"><a class="page-link" href="./?action=listarUsuarios&pagina={{i - 1}}" tabindex="-1">Anterior</a></li>-->
          {% for i in 1..cantidad %}
            <li class="page-item"><a class="page-link" href="./?action=listar_pacientes&pagina={{i}}">{{i}}</a></li>
          {% endfor %}
          <!--<li class="page-item"><a class="page-link" href="./?action=listarUsuarios&pagina={{i + 1}}">Siguiente</a></li>-->
          </ul>
          </nav>
          </nav>
{% endif %}
{% include 'footer.html'%}
    </body>
</html>