{% include 'encabezado.html'%}
    <head>
        <title>Home</title>
    </head>
    <body>
{% include 'barra.html'%}
    <br>
<div class="container">
  <h2><u>Edici√≥n de Usuario</u></h2>
      {% if resources.error == 1%}
    <br>
    <div class="alert alert-secondary" role="alert">
      Error: El Nombre de Usuario ingresado ya existe
    </div>
    {% endif %}
    {% if resources.error == 3%}
    <br>
    <div class="alert alert-secondary" role="alert">
      Error: E-mail invalido
    </div>
  {% endif %}
  <div class="form-row">
  <div class="form-group col-md-4">
  <form action="./index.php?action=actualizarUsuario&id={{resources.resources.id}}" method="POST">
      <label for="usuario">Usuario:</label>
      <input type="text" class="form-control" id="usuario" placeholder="Usuario" name="usuario" value="{{resources.resources.username}}" required>
    </div>
    <div class="form-group col-md-4">
      <label for="email">E-mail:</label>
      <input type="text" class="form-control" id="email" placeholder="E-mail" name="email" value="{{resources.resources.email}}" required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="apellido">Apellido:</label>
      <input type="text" class="form-control" id="apellido" placeholder="Apellido" name="apellido" value="{{resources.resources.lastname}}" required>
    </div>
    <div class="form-group col-md-4">
      <label for="nombre">Nombre:</label>
      <input type="text" class="form-control" id="nombre" placeholder="Nombre" name="nombre" value="{{resources.resources.firstname}}" required>
    </div>
  </div>
  <div class="form-row">
   <div class="form-group col-md-4">
      <label for="estado">Estado:</label>
      <select class="form-control" name="activo" id="estado">
      <option value="0" {% if resources.resources.activo == 0 %} selected {% endif %}>Activo</option>
      <option value="1" {% if resources.resources.activo == 1 %} selected {% endif %}>Inactivo</option>
      </select>
    </div>
  </div>
    <button type="submit" class="btn btn-primary">Aceptar</button>
  </form>
</div>
{% include 'footer.html'%}
    </body>
</html>