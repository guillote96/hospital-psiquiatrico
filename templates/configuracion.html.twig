{% include 'encabezado.html' %}
<body>
{% include 'barra.html' %}
<div class="container">
  {% if resources.error == 1%}
  <br>
  <div class="alert alert-secondary" role="alert">
    Error: No pueden quedar campos vacíos
  </div>
  {% endif %}
  <br>
  <h2><u>Configuración</u></h2>
  <form id="formulario" action="./index.php?action=modificarConfiguracion" method="POST">
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="titulo">Título:</label>
      <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Título" value="{{resources.resources[0].valor}}" required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="descripcion">Descripción:</label>
      <textarea class="form-control" id="descripcion" name="descripcion" form="formulario" required>{{resources.resources[1].valor}}</textarea>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="e-mail">E-mail:</label>
      <input type="text" class="form-control" id="email" name="email" placeholder="E-mail" value="{{resources.resources[2].valor}}" required>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="cantidad">Cantidad de elementos por página en los listados:</label>
      <input type="text" class="form-control" id="cantidadDeElementos" name="cantidadDeElementos" placeholder="Cantidad de elementos por página" value="{{resources.resources[3].valor}}" required>
    </div>
  </div>
   <div class="form-row">
    <div class="form-group col-md-4">
      <label for="estado">Estado del sitio:</label>
      <select class="form-control" value="{{resources.resources[4].valor}}" name="estado" id="estado" required>
      <option value="1" {% if resources.resources[4].valor == 1 %} selected {% endif %}>Habilitado</option>
      <option value="0" {% if resources.resources[4].valor == 0 %} selected {% endif %}>Deshabilitado</option>
      </select>
    </div>
  </div>
  <button type="submit" class="btn btn-primary">Aceptar</button>
</form>
{% include 'footer.html' %}
</body>
</html>