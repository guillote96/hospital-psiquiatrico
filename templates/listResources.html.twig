{% include 'encabezado.html'%}
{% set const = 1 %}
    <head>
        <title>Usuarios</title>
    </head>
{% include 'barra.html'%}
    <body>
      <br>
      <div>
        <a class="btn btn-primary btn-sm" href="./?action=registrarse"> Agregar usuario </a>
      </div>
      <div class="container">
      <br>
        <h2><u>Usuarios</u></h2>
        <table class="table">
  <thead>
    <tr>
      <th scope="col">Usuario</th>
      <th scope="col">Nombre</th>
      <th scope="col">Apellido</th>
      <th scope="col">Estado</th>
      <th scope="col">Activar/Bloquear</th>
      <th scope="col">Agregar Rol</th>
      <th scope="col">Eliminar</th>
    </tr>
  </thead>
   <tbody>
        {% for item in resources.resources %}
          <tr>
          <td><a href="./?action=editarUsuario&id={{ item.id }}">
          <strong>{{item.username}}</strong><span></a></td>
          <td>{{item.firstname}}</td>
          <td>{{item.lastname}}</td>
          <td>{% if (item.activo > 0) %}
              Inactivo
             {% else %}
             Activo 
             {% endif %}</td>
          <td><a class="btn btn-primary btn-sm" href="./?action=cambiarEstado&id={{ item.id }}&estado={{item.activo}}">
          {% if (item.activo > 0) %}
            Activar
          {% else %}
            Bloquear
          {% endif %}</a></td>
          <td><a class="btn btn-primary btn-sm" href="./?action=agregarRol&id={{ item.id }}">Agregar rol</a></td>
          <td> <a class="btn btn-primary btn-sm" href="./?action=eliminarUsuario&id={{ item.id }}">Eliminar</a></td>
          </tr>
        {% endfor %}
      </tbody>
        </table>
      </div>
        <br>
        {% if resources.cantidad > 1 %}
          <nav aria-label="Page navigation example">
          <nav aria-label="Page navigation example">
          <ul class="pagination justify-content-center">
          <!--<li class="page-item"><a class="page-link" href="./?action=listarUsuarios&pagina={{i - 1}}" tabindex="-1">Anterior</a></li>-->
          {% for i in 1..resources.cantidad %}
            <li class="page-item"><a class="page-link" href="./?action=listarUsuarios&pagina={{i}}">{{i}}</a></li>
          {% endfor %}
          <!--<li class="page-item"><a class="page-link" href="./?action=listarUsuarios&pagina={{i + 1}}">Siguiente</a></li>-->
          </ul>
          </nav>
          </nav>
{% endif %}
{% include 'footer.html'%}
    </body>
</html>